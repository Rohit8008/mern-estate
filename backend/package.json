{
  "name": "mern-estate-backend",
  "version": "1.0.0",
  "description": "MERN Estate API Backend",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "make-admin": "node scripts/makeAdmin.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --coverage",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --coverage --ci",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "logs:clean": "rm -rf logs/*.log",
    "logs:rotate": "node scripts/rotateLogs.js",
    "db:seed": "node scripts/seedDatabase.js",
    "db:seed-categories": "node scripts/seedCategories.js",
    "db:migrate": "node scripts/migrateDatabase.js",
    "db:backup": "node scripts/backup.js",
    "health:check": "curl -f http://localhost:3000/api/health/health",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop mern-estate-api",
    "pm2:restart": "pm2 restart mern-estate-api",
    "pm2:logs": "pm2 logs mern-estate-api",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "google-auth-library": "^10.3.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.14",
    "nodemon": "^3.0.1",
    "socket.io": "^4.8.1",
    "twilio": "^4.23.0",
    "validator": "^13.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.6"
  }
}
